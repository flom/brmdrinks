@model IEnumerable<BrmDrinks.Models.Product>

@{
    ViewBag.Title = "Produkte";
}

<p>
    @Html.ActionLink("Neues Produkt anlegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Bearbeiten", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Entfernen", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
